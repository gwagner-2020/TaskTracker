@model IEnumerable<IdentityRole>

<h1 class="bg-light text-black">All Roles</h1>

<table class="table table-sm table-bordered table-bordered">
    <tr><th>Name</th><th>Users</th><th>Update</th><th>Delete</th></tr>
    @foreach (var role in Model)
    {
        <tr>
            @*<td>@role.Id</td>*@
            <td>@role.Name</td>
            <td @*i-role="@role.Id"*@><a asp-controller="Administration" asp-action="ShowUsers" asp-route-id="@role.Id">View Users</a></td>
            <td><a class="btn btn-sm btn-light text-black" asp-action="Update" asp-route-id="@role.Id">Update</a></td>
            <td>
                <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-light text-black">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<a asp-action="CreateRole" class="btn btn-secondary">Create a Role</a>
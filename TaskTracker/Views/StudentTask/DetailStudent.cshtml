@using TaskTracker.ViewModels
@model TaskTracker.ViewModels.DetailStudentTaskViewModel

<table class="table table-bordered">

    <tr>
        <th>Task Name</th>
        <td>@Model.Name</td>
    </tr>

    <tr>
        <th>Description</th>
        <td>@Model.Description</td>
    </tr>
    <tr>
        <th>Due Date</th>
        <td>@Model.DueDate.ToShortDateString()</td>
    </tr>
    <tr>
        <th>Submit Completed Task</th>
        <td>
            <form asp-controller="StudentTask" asp-action="DetailStudent" method="post">
                <input type="hidden" value="@Model.StudentTagId" name="studentTagId" />
                <input type="hidden" value="@Model.StudentTaskId" name="studentTaskId" />
                <div>
                    <input asp-for="SubmitDate" />
                </div>
                <input type="submit" value="Submit Task" />
            </form>
        </td>
    </tr>
    <tr>
        <th>Approved By Supervisor</th>
        <td>@Model.Approved</td>
    </tr>
    <tr>
        <th>Date Approved</th>
        <td>@Model.ApproveDate.ToShortDateString()</td>
    </tr>
    @*<tr>
            <th>Students Assigned</th>
            <td>@Model.StudentNamesText</td>
        </tr>*@
</table>
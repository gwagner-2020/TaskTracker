@using TaskTracker.ViewModels
@model TaskTracker.ViewModels.DetailStudentTaskViewModel

<p>
    <a asp-controller="StudentTask" asp-action="AllTasks">Back to All Tasks</a>
</p>

<table class="table table-bordered">

    <tr>
        <th>Task Name</th>
        <td>@Model.Name</td>
    </tr>

    <tr>
        <th>Description</th>
        <td>@Model.Description</td>
    </tr>
    <tr>
        <th>Due Date</th>
        <td>@Model.DueDate.ToShortDateString()</td>
    </tr>
    <tr>
        <th>Date Submitted</th>
        <td>@Model.SubmitDate.ToShortDateString()</td>
    </tr>

    <tr>
        <th>Approved</th>
        <td>@Model.Approved</td>
    </tr>
    <tr>
        <th>Date Approved</th>
        <td>@Model.ApproveDate.ToShortDateString()</td>
    </tr>
    <tr>
            <th>Student Assigned</th>
            <td>@Model.StudentNamesText</td>
    </tr>
</table>

<table class="table table-bordered">
    <tr>
        <td>
            <p>
                <a asp-controller="StudentTask" asp-action="AddStudentTag" asp-route-id="@Model.TaskId">Assign Student To Task</a>
            </p>
        </td>
        <td>
            <p>
                <a asp-controller="StudentTask" asp-action="Update" asp-route-id="@Model.TaskId">Update Task</a>
            </p>
        </td>
        <td>
            <p>
                <a asp-controller="StudentTask" asp-action="Duplicate" asp-route-id="@Model.TaskId">Duplicate Task</a>
            </p>
        </td>
        <td>
            <p>
                <a asp-controller="StudentTask" asp-action="Delete">Delete Task</a>
            </p>
        </td>

    </tr>
</table>



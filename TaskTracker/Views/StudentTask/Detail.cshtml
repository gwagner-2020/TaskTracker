@using TaskTracker.ViewModels
@model TaskTracker.ViewModels.DetailStudentTaskViewModel


<table class="table table-bordered">

    <tr>
        <th>Task</th>
        <td>@Model.Name</td>
    </tr>

    <tr>
        <th>Description</th>
        <td>@Model.Description</td>
    </tr>
    <tr>
        <th>Due Date</th>
        <td>@Model.DueDate</td>
    </tr>
    <tr>
        <th>Date Submitted</th>
        <td>@Model.SubmitDate</td>
    </tr>
    <tr>
        <th>Date Approved</th>
        <td>@Model.ApproveDate</td>
    </tr>
    <tr>
        <th>Approved</th>
        <td>@Model.Approved</td>
    </tr>
    @*<tr>
        <th>Students Assigned</th>
        <td>@Model.StudentNamesText</td>
    </tr>*@
</table>
<p>
    <a asp-controller="StudentTask" asp-action="AddStudentTag" asp-route-id="@Model.TaskId">Assign Student To Task</a>
</p>
<p>
    <a asp-controller="StudentTask" asp-action="Update" asp-route-id="@Model.TaskId">Update Task Details</a>
</p>
<p>
    <a asp-controller="StudentTask" asp-action="AllTasks">All Tasks</a>
</p>



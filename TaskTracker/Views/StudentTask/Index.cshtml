@using TaskTracker.Models

@model List<StudentTag>

<h2>Select Student Name To See Assigned Tasks:</h2>
<table class="table">
    

    @foreach (var tag in Model)
    {
        <tr>
            <td><a asp-controller="StudentTask" asp-action="DetailStudent" asp-route-id="@tag.Id">@tag.StudentName</a></td>
        </tr>
    }
</table>


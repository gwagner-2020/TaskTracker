@using TaskTracker.ViewModels

@model AddStudentTaskViewModel

<h1>Add Student Task</h1>

<form method="post">
    <div asp-controller="StudentTask" asp-action="Add" class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label asp-for="Description">Description</label>
        <input asp-for="Description" />
    </div>
    <div>
        <label asp-for="DueDate">Due Date</label>
        <input asp-for="DueDate" />
    </div>
    <input type="submit" value="Add Student Task" />
</form>